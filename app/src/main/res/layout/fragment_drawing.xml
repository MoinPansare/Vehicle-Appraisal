<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vehicleappraisal.com.vehicleappraisal.Tabs.DrawingFragment">

    <LinearLayout
        android:id="@+id/vectors"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_above="@+id/tableRow">


        <TableRow
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:scaleType="fitXY"
                android:src="@drawable/bg123" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:scaleType="fitXY"
                android:src="@drawable/bg123" />

        </TableRow>

        <TableRow
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:scaleType="fitXY"
                android:src="@drawable/bg123" />
            <!--android:transitionName="imageTransition"-->

            <ImageView
                android:id="@+id/img4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:scaleType="fitXY"
                android:src="@drawable/bg123" />

        </TableRow>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/CameraRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/vectors"
            android:layout_weight="4" />

    </LinearLayout>





    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/primaryColor"
            android:text="Camera"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/galleryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/primaryColor"
            android:text="Gallery"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </TableRow>


</RelativeLayout>


